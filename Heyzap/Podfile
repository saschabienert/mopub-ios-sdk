source 'https://github.com/MaxGabriel/CocoapodsSource.git'
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '6.0'

target :MediationTestApp, :exclusive => true do
  pod 'ChartboostSDK' # Maintained by Chartboost
  pod 'AdColony' # Maintained by AdColony

  pod 'Google-AdMob-Ads-SDK' # Maintained by 3rd parties, not AdMob

  pod 'VungleAdvertiserSDK' # In Cocoapods, but outdated. Vendored by Heyzap
  pod 'AppLovin' # Vendored by Heyzap
  pod 'UnityAds' # Vendored by Heyzap
end

target :"Ads Tests", :exclusive => true do
   pod 'Kiwi'
   pod 'OHHTTPStubs'
end

target :'Integration Tests', :exclusive => true do
  pod 'Subliminal', :git => 'https://github.com/inkling/Subliminal.git', :branch => "shared/Xcode6"
  pod 'OCMockito'
end