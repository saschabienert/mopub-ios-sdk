source 'https://github.com/Heyzap/CocoapodsSource.git'
source 'https://github.com/CocoaPods/Specs.git'

inhibit_all_warnings!


platform :ios, '6.0'

target :HeyzapSDKTest, :exclusive => true do
  pod 'Bugsnag', :git => "https://github.com/bugsnag/bugsnag-cocoa.git"
end

target :MediationTestApp, :exclusive => true do
  pod 'Bugsnag', :git => "https://github.com/bugsnag/bugsnag-cocoa.git"
  pod 'ChartboostSDK', :inhibit_warnings => true # Maintained by Chartboost
  pod 'AdColony' # Maintained by AdColony

  pod 'Google-AdMob-Ads-SDK' # In Cocoapods, but outdated. Vendored by Heyzap
  pod 'VungleAdvertiserSDK' # In Cocoapods, but outdated. Vendored by Heyzap
  pod 'AppLovin' # Vendored by Heyzap
  pod 'UnityAds' # Vendored by Heyzap
  pod 'FacebookAudienceNetwork' # Vendored by Heyzap
  pod 'HyprMX' #Vendored by Heyzap
end

target :"Ads Tests", :exclusive => true do
   pod 'Kiwi'
   pod 'OHHTTPStubs'
end

target :'Integration Tests', :exclusive => true do
  pod 'Subliminal', :git => 'https://github.com/inkling/Subliminal.git', :branch => "shared/Xcode6"
  pod 'OCMockito'
end
